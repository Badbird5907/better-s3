{
  "name": "@app/cf-worker",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --show-interactive-dev-session false",
    "build": "wrangler deploy --dry-run --outdir=dist",
    "deploy": "wrangler deploy",
    "clean": "git clean -xdf .cache .turbo dist node_modules .wrangler",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint --flag unstable_native_nodejs_ts_config",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@app/shared": "workspace:*",
    "hono": "^4.7.4"
  },
  "devDependencies": {
    "@app/eslint-config": "workspace:*",
    "@app/prettier-config": "workspace:*",
    "@app/tsconfig": "workspace:*",
    "@cloudflare/workers-types": "^4.20250109.0",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:",
    "wrangler": "^3.101.0"
  },
  "prettier": "@app/prettier-config"
}
